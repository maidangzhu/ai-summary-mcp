{
  "name": "ai-summary-mcp-server",
  "version": "4.0.0",
  "description": "AI Summary MCP服务器，基于 Model Context Protocol 的数据收集和转发服务器，专门用于收集聊天内容并发送到远程API进行分析",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "bin": {
    "ai-summary-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "node scripts/build.js && chmod 755 build/index.js",
    "build:types": "tsc --project tsconfig.build.json",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "dev": "pnpm run build && pnpm run start",
    "clean": "rm -rf build",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run build:types && pnpm run test:publish",
    "test:publish": "node scripts/check-publish.js",
    "prepack": "pnpm run build && pnpm run build:types"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "mcp-config.json"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "analysis",
    "collaboration",
    "archive",
    "tech-stack",
    "business-analysis",
    "problem-classification",
    "solution-extraction",
    "bug-analysis",
    "chat-analysis",
    "deepseek",
    "openai",
    "claude",
    "anthropic",
    "typescript",
    "nodejs"
  ],
  "author": {
    "name": "zhujianye",
    "email": "zhujianye@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhujianye/ai-collaboration-archive.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://github.com/zhujianye/ai-collaboration-archive/tree/main/packages/mcp-server#readme",
  "bugs": {
    "url": "https://github.com/zhujianye/ai-collaboration-archive/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.9.2"
  }
}