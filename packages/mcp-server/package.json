{
  "name": "bug-report-mcp-server",
  "version": "7.0.7",
  "description": "AI协作档案分析器 - MCP服务器，基于 Model Context Protocol 的 AI 协作档案分析服务器，专门用于分析 Bug 修复相关的聊天内容",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "bin": {
    "bug-report-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "node scripts/build.js && chmod 755 build/index.js",
    "build:types": "tsc --project tsconfig.build.json",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "dev": "pnpm run build && pnpm run start",
    "clean": "rm -rf build",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run build:types && pnpm run test:publish",
    "test:publish": "node scripts/check-publish.js",
    "prepack": "pnpm run build && pnpm run build:types"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "mcp-config.json"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "analysis",
    "collaboration",
    "archive",
    "tech-stack",
    "business-analysis",
    "problem-classification",
    "solution-extraction",
    "bug-analysis",
    "chat-analysis",
    "deepseek",
    "openai",
    "claude",
    "anthropic",
    "typescript",
    "nodejs"
  ],
  "author": {
    "name": "zhujianye",
    "email": "zhujianye@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhujianye/ai-collaboration-archive.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://github.com/zhujianye/ai-collaboration-archive/tree/main/packages/mcp-server#readme",
  "bugs": {
    "url": "https://github.com/zhujianye/ai-collaboration-archive/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "dotenv": "^17.2.2",
    "pg": "^8.16.3",
    "zod": "3",
    "@prisma/client": "^6.15.0"
  },
  "devDependencies": {
    "@prisma/client": "^6.15.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.11.10",
    "esbuild": "^0.19.0",
    "typescript": "^5.9.2",
    "prisma": "^6.15.0"
  }
}